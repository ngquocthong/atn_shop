<section class="position-relative py-1 py-xl-4">
    <div class="container position-relative">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card mb-5">
                    <div class="card-body p-sm-5">
                        <h2 class="text-center mb-4">Employee</h2>
                        <form action="/employee" method="POST" autocomplete="off">
                            <input type="hidden" name="_id" value="{{employee._id}}">
                            <div class="form-group">
                                <label>Full Name</label>
                                <input type="text" class="form-control" name="fullName" value="{{employee.fullName}}"
                                    >
                                <div class="text-danger">
                                    {{employee.fullNameError}}
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" name="email" value="{{employee.email}}"
                                    >
                                <div class="text-danger">
                                    {{employee.emailError}}
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group md-6">
                                    <label>Mobile</label>
                                    <input type="text" name="mobile"  value="{{employee.mobile}}"
                                        class="form-control">

                                </div>
                                <div class="form-group md-6">
                                    <label>City</label>
                                    <input type="text" name="city" d value="{{employee.city}}"
                                        class="form-control">
                                </div>
                            </div>

                            <div class="form-group d-flex  justify-content-center mt-4 ">
                                <button type="submit" class="btn btn-info "><i class="fa fa-database"></i>Submit</button>
                                <a href="/employee/list" class="btn btn-danger">
                                    <i class="fa fa-list-alt"></i>View All
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>